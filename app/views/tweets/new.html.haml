.new-message
  .new-message__header
  .new-message__main
    = form_with(model: @tweet,url: genru_tweets_path(user_id: current_user.id),local: true,method: :post,id: "new_tweet") do |f|
      .new-message__main__write
        = f.text_area :text,maxlength: "200",placeholder:"200文字以内の入力をお願いします",class:"new-message__main__write__box"
      .new-message__main__image
        %p.new-message__main__image__upload
          = f.label :image, class: "new-message__main__image__link",id: "upload_image" do
            =icon("far","images fa-2x",id: "file_icon")
            = f.file_field :image,style: "display: none;", class:"new-message__main__write__image__link__file",id:"tweet_img" do
              -if @tweet.image.present?
                = image_tag @tweet.image,id:"image_prv"
      .new-message__main__button
        = f.submit "送信",class:"new-message__main__button__submit",id: "tweet_submit"
      .new-message__main__return
        = link_to genru_path(params[:genru_id]),class:".new-message__main__return__icon" do
          =icon("fas","window-close fa-2x",id: "icon_return")
  .new-message__footer